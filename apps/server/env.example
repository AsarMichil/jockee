# Spotify API
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/v1/auth/spotify/callback

# Database
DATABASE_URL=postgresql://autodj:password@localhost:5432/autodj

# Redis
REDIS_URL=redis://localhost:6379/0

# Audio Storage
AUDIO_STORAGE_PATH=./audio
MAX_AUDIO_CACHE_GB=50

# yt-dlp settings
YTDL_RATE_LIMIT=50K
YTDL_MAX_DOWNLOADS_PER_MINUTE=10

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Environment
ENVIRONMENT=development
DEBUG=true

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO 