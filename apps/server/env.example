# Spotify API
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/v1/auth/spotify/callback

# Database
DATABASE_URL=postgresql://autodj:password@localhost:5432/autodj

# Redis
REDIS_URL=redis://localhost:6379/0

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# Audio Storage (deprecated, kept for backward compatibility)
AUDIO_STORAGE_PATH=./audio
MAX_AUDIO_CACHE_GB=50

# yt-dlp settings
YTDL_RATE_LIMIT=50K
YTDL_MAX_DOWNLOADS_PER_MINUTE=10

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Environment
ENVIRONMENT=development
DEBUG=true

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO 